{
  "name": "flink",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "find . -type d \\( -name \"dist\" -o -name \"node_modules\" \\) -exec rm -rf {} +",
    "build": "yarn workspaces foreach --all --topological-dev run build",
    "test": "yarn workspaces foreach --all run jest",
    "test:actions": "yarn workspace @flink/actions run jest",
    "test:api": "yarn workspace @flink/api run jest",
    "test:common": "yarn workspace @flink/common run jest",
    "test:content": "yarn workspace @flink/content run jest",
    "test:dashboard": "yarn workspace @flink/dashboard run jest",
    "test:events": "yarn workspace @flink/events run jest",
    "test:farcaster": "yarn workspace @flink/farcaster run jest",
    "test:sdk": "yarn workspace @flink/sdk run jest",
    "start:dashboard": "yarn workspace @flink/dashboard start",
    "start:farcaster:api": "yarn workspace @flink/farcaster start:api",
    "start:farcaster:consumer": "yarn workspace @flink/farcaster start:consumer",
    "start:farcaster:backfill": "yarn workspace @flink/farcaster start:backfill",
    "start:farcaster:publisher": "yarn workspace @flink/farcaster start:publisher",
    "start:events": "yarn workspace @flink/events start",
    "start:actions": "yarn workspace @flink/actions start",
    "start:content": "yarn workspace @flink/content start",
    "start:api": "yarn workspace @flink/api start"
  },
  "workspaces": ["packages/actions", "packages/api", "packages/common", "packages/content", "packages/dashboard", "packages/events", "packages/farcaster", "packages/sdk"],
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@4.0.2"
}
