{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext", "es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true,
    "noImplicitAny": true
  },
  "exclude": [
    "dist",
    "**/dist/",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "./packages/content"
    },
    {
      "path": "./packages/common"
    },
    {
      "path": "./packages/content"
    },
    {
      "path": "./packages/dashboard"
    },
    {
      "path": "./packages/events"
    },
    {
      "path": "./packages/farcaster"
    },
    {
      "path": "./packages/sdk"
    }
  ]
}
